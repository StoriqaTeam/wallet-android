<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="contact"
            type="com.storiqa.storiqawallet.objects.Contact" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ivContactContainer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivContact"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/contactGray" />

            <TextView
                android:id="@+id/tvNameShorten"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="@color/contactImageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/grayLine"
            app:layout_constraintTop_toBottomOf="@+id/ivContactContainer" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@{contact.name}"
            app:layout_constraintStart_toEndOf="@+id/ivContactContainer"
            app:layout_constraintTop_toTopOf="@+id/ivContactContainer"
            tools:text="Annie Hall" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:text="@{contact.phone}"
            app:layout_constraintStart_toEndOf="@+id/ivContactContainer"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            tools:text="+7 (921) 400-39-43" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:text="Wallet"
            android:visibility='@{contact.wallet != ""? View.VISIBLE : View.GONE}'
            android:textColor="@color/brightSkyBlue"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</layout>
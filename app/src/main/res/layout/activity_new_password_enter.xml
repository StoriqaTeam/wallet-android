<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/header" />

            <TextView
                style="@style/recoveryHeader"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="@string/passwordRecovery"/>

            <TextView
                style="@style/recoveryMessage"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/newPasswordMessage"
                android:layout_marginBottom="20dp" />

            <include layout="@layout/layout_password_enter"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnConfirmPassword"
        style="@style/signButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:text="@string/confirmNewPassword" />
</RelativeLayout>


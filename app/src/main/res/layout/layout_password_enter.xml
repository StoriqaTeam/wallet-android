<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/registerTextInputStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etPassword"
                style="@style/editText"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:nextFocusDown="@id/etRepeatPassword" />

            <ImageView
                android:id="@+id/ivShowPassword"
                style="@style/watchPasswordButton"
                android:padding="10dp"
                android:src="@drawable/closed_eye" />

        </RelativeLayout>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilRepeatedPassword"
        style="@style/registerTextInputStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRepeatPassword"
                style="@style/editText"
                android:hint="@string/repeatPassword"
                android:inputType="textPassword"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/ivShowRepeatedPassword"
                style="@style/watchPasswordButton"
                android:padding="10dp"
                android:src="@drawable/closed_eye" />

        </RelativeLayout>

    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</merge>
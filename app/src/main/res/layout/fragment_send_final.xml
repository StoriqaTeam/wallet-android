<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.storiqa.storiqawallet.screen_main.MainActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBack"
            style="@style/arrowBackStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            style="@style/header"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:text="@string/send"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBack" />


        <ScrollView
            app:layout_constraintTop_toBottomOf="@+id/btnBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/send_header_container">

                    <TextView
                        android:id="@+id/textView24"
                        style="@style/sendHeader"
                        android:fontFamily="@font/roboto"
                        android:text="@string/sending"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAmountInCurrency"
                        style="@style/sendAmountStyle"
                        android:layout_marginBottom="19dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"
                        android:text='@{viewModel.amountInCurrency + " " + viewModel.tokenType}'
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView24"
                        app:layout_constraintTop_toBottomOf="@+id/textView24"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="0.00340000 BTC" />

                    <TextView
                        android:id="@+id/tvAmountInSTQ"
                        style="@style/sendAmountStyle"
                        android:layout_marginBottom="19dp"
                        android:fontFamily="@font/roboto_light"
                        android:text='@{"~" + viewModel.amountInSTQ + " STQ"}'
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvAmountInCurrency"
                        app:layout_constraintTop_toBottomOf="@+id/tvAmountInCurrency"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="=10322.22 STQ" />

                    <ImageView
                        android:id="@+id/ivEdit"
                        style="@style/buttonEdit"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/tvAmountInSTQ"
                        app:layout_constraintStart_toEndOf="@+id/tvAmountInCurrency"
                        app:layout_constraintTop_toTopOf="@+id/tvAmountInCurrency" />

                    <ImageView
                        android:id="@+id/currencyLogo"
                        style="@style/currencySign"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/sendTitleStyle"
                        android:text="@string/wallet"
                        tools:text="Address"
                        android:layout_marginLeft="18dp"
                        android:textColor="@color/bluegrey"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView29"
                        style="@style/sendInfoStyle"
                        android:fontFamily="@font/roboto"
                        android:text='@{viewModel.wallet}'
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView17"
                        tools:text="1F1tAaz5x1HUXrCNLbtMDqcw6o5GNn4xqX" />


                    <TextView
                        android:id="@+id/textView31"
                        style="@style/sendTitleStyle"
                        android:layout_marginTop="25dp"
                        android:text="@string/reciever"
                        android:layout_marginLeft="18dp"
                        android:textColor="@color/bluegrey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" />

                    <TextView
                        android:id="@+id/textView30"
                        style="@style/sendAmountStyle"
                        android:layout_height="29dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"
                        android:text='@{viewModel.reciever}'
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView31"
                        tools:text="Arnold Arkroyd" />

                    <TextView
                        android:id="@+id/textView32"
                        style="@style/sendTitleStyle"
                        android:layout_marginTop="29dp"
                        android:layout_marginLeft="18dp"
                        android:text="@string/labelPaymentFee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView30" />

                    <TextView
                        android:id="@+id/tvCommission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView32"
                        tools:text="30 STQ" />

                    <SeekBar
                        android:id="@+id/sbFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="26dp"
                        android:thumb="@drawable/thumb"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView32" />

                    <TextView
                        android:id="@+id/textView36"
                        style="@style/sliderItem"
                        android:layout_marginTop="22dp"
                        android:text="Low"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="@+id/sbFee"
                        app:layout_constraintTop_toBottomOf="@+id/sbFee" />

                    <TextView
                        android:id="@+id/textView37"
                        style="@style/sliderItem"
                        android:text="Hight"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/sbFee"
                        app:layout_constraintTop_toTopOf="@+id/textView36" />

                    <TextView
                        android:id="@+id/textView38"
                        style="@style/sliderItem"
                        android:text="Medium"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView36" />

                    <TextView
                        android:id="@+id/textView39"
                        style="@style/sendTitleStyle"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="22dp"
                        android:text="@string/medianWait"
                        android:textColor="@color/bluegrey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView36" />

                    <TextView
                        android:id="@+id/tvWaitTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView39"
                        app:layout_constraintStart_toEndOf="@+id/textView39"
                        app:layout_constraintTop_toTopOf="@+id/textView39"
                        tools:text="48 S" />

                    <TextView
                        android:id="@+id/textView41"
                        style="@style/sendTitleStyle"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="22dp"
                        android:text="@string/subtotal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView39" />

                    <TextView
                        android:id="@+id/tvSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView41"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView41"
                        tools:text="10372.22 STQ" />

                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="71dp"
                        android:layout_marginRight="71dp"
                        android:layout_marginTop="21dp"
                        android:gravity="center"
                        android:text="@string/notEnoghtFounds"
                        android:textColor="#ff2d55"
                        app:layout_constraintBottom_toTopOf="@+id/btnSend"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSubtotal"
                        app:layout_constraintVertical_bias="1.0" />


                    <Button
                        android:id="@+id/btnSend"
                        style="@style/buttonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="19dp"
                        android:background="@drawable/switch_state_button"
                        android:text="@string/send"
                        android:textColor="@drawable/button_color_switcher"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:scaleY="-1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/shad_nav_bar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
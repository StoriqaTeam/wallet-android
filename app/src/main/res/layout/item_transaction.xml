<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.storiqa.storiqawallet.enums.TransactionType" />

        <variable
            name="transaction"
            type="com.storiqa.storiqawallet.objects.Transaction" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/deposit_icon_round"
            android:src="@{transaction.transactionType == TransactionType.SEND? @drawable/send_icon_round : @drawable/deposit_icon_round}" />

        <TextView
            android:id="@+id/tvTransactionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/roboto"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            tools:text="Receive ETH" />

        <TextView
            android:id="@+id/tvTransactionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/warm_grey"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/tvTransactionHeader"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionHeader"
            tools:text="from 0xe3fâ€¦78345hj" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:text="@{transaction.formattedDate}"
            android:textColor="@color/pinkish_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvTransactionDescription"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionDescription"
            tools:text="17:22 Aug 11" />

        <TextView
            android:id="@+id/tvAmountInToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@{transaction.transactionType == TransactionType.SEND? @color/sentRed : @color/recievedGreen}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTransactionHeader"
            tools:text="+0.00010000127 ETH" />

        <TextView
            android:id="@+id/tvAmountInDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="10dp"
            android:textColor="@color/warm_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAmountInToken"
            tools:text="+$0.029" />


    </android.support.constraint.ConstraintLayout>

</layout>
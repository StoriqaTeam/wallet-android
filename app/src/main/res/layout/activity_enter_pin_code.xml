<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen_pin_code_enter.EnterPinCodeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        tools:background="@color/brightSkyBlue"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:layout_marginTop="27dp"
        android:layout_gravity="center_horizontal"
        tools:text="User, good day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/blue_circle_background"
            android:layout_width="14dp"
            android:layout_height="14dp" />

        <ImageView style="@style/pinCircleStyle" />

        <ImageView
            android:background="@drawable/blue_circle_background"
            android:layout_width="14dp"
            android:layout_height="14dp" />

        <ImageView
            android:background="@drawable/blue_circle_background"
            android:layout_width="14dp"
            android:layout_height="14dp" />

    </LinearLayout>

</LinearLayout>
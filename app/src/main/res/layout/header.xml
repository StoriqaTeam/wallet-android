<?xml version="1.0" encoding="utf-8"?>

<!--немного не по Android guidelines создавать так toolbar, но
у нас на данный момент тулбар - это текст и кнопка назад,
засчет такого xml дизайна удастся значительно уменьшить бойлерплейт:
установка, настройка toolbar, обработчик onOptionMenuItemSelected итд-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    tools:showIn="@layout/activity_recover_password">

    <!--TODO change dp and icon-->
    <ImageView
        android:id="@+id/btnBack"
        android:background="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <TextView
        style="@style/toolbarTextStyle"
        android:layout_centerHorizontal="true"
        android:text="@string/passwordRecovery" />

</RelativeLayout>
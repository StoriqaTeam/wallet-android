<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.storiqa.storiqawallet.screen_main.MainActivityViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBack"
            style="@style/arrowBackStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:text="@string/send"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            style="@style/header" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            style="@style/send_header_container"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack">

            <TextView
                android:id="@+id/textView24"
                style="@style/sendHeader"
                android:text="@string/sending"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAmountInCurrency"
                style="@style/sendAmountStyle"
                android:layout_marginTop="7dp"
                android:text='@{viewModel.amountInCurrency + " " + viewModel.tokenType}'
                app:layout_constraintStart_toStartOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                tools:text="0.00340000 BTC" />

            <TextView
                android:id="@+id/tvAmountInSTQ"
                style="@style/sendAmountStyle"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_light"
                android:text='@{"~" + viewModel.amountInSTQ + " STQ"}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvAmountInCurrency"
                app:layout_constraintTop_toBottomOf="@+id/tvAmountInCurrency"
                app:layout_constraintVertical_bias="0.0"
                tools:text="=10322.22 STQ" />

            <ImageView
                android:id="@+id/ivEdit"
                style="@style/buttonEdit"
                app:layout_constraintBottom_toTopOf="@+id/tvAmountInSTQ"
                app:layout_constraintStart_toEndOf="@+id/tvAmountInCurrency"
                app:layout_constraintTop_toTopOf="@+id/tvAmountInCurrency"
                  />

            <ImageView
                android:id="@+id/currencyLogo"
                style="@style/currencySign"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@android:color/black"
                tools:layout_height="48dp"
                tools:layout_width="48dp" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="@string/sendTo"
            android:textColor="@color/bluegrey"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brightSkyBlue"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:text="@string/scanQR"
            app:layout_constraintEnd_toStartOf="@+id/ivStartScanner"
            app:layout_constraintTop_toTopOf="@+id/textView26" />

        <ImageView
            android:id="@+id/ivStartScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView27"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView27"
            android:background="@drawable/scan_qr_icon" />

        <RelativeLayout
            android:id="@+id/rlReciever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26">

            <EditText
                android:id="@+id/etReciever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="@string/hintAddReceiver"
                android:inputType="number" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/etReciever"
                android:layout_marginTop="9dp"
                android:background="@color/grayLine" />

            <ImageView
                android:id="@+id/vClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/delete" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvContacts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="21dp"
            tools:visibility="gone"
            android:visibility="@{viewModel.isFoundErrorVisible? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlReciever"
            tools:listitem="@layout/item_contact" />

        <Button
            android:id="@+id/btnNext"
            style="@style/buttonStyle"
            android:text="@string/next"
            android:enabled='@{viewModel.isContactSelected}'
            android:visibility='@{viewModel.isContinueButtonVisible? View.VISIBLE : View.GONE}'
            android:background="@drawable/switch_state_button"
            android:textColor="@drawable/button_color_switcher"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{viewModel.isFoundErrorVisible? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlReciever"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="81dp"
                android:layout_height="87dp"
                android:layout_marginTop="41dp"
                android:src="@drawable/phone_not_found" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:gravity="center"
                tools:text="Error"
                android:text="@string/noNumberError"
                android:textColor="@color/bluegrey"/>

        </LinearLayout>


        <ImageView
            style="@style/purpleSpotStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            style="@style/blueSpotStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>
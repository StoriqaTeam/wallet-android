<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">29dp</item>
        <item name="android:layout_marginRight">29dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="editText">
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#60000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="grayTextButton">
        <item name="android:textColor">@color/grayTextButtonColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pinCircleStyle">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/white_circle_blue_corners_background</item>
        <item name="android:layout_width">11dp</item>
        <item name="android:layout_height">11dp</item>
    </style>

    <style name="registerTextInputStyle">
        <item name="android:layout_marginLeft">@dimen/registerEditTextSideMargin</item>
        <item name="android:layout_marginRight">@dimen/registerEditTextSideMargin</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="signButton" parent="buttonStyle">
        <item name="android:background">@drawable/switch_state_button</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/disableButton</item>
    </style>

    <style name="watchPasswordButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="registerDialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="registerDialogMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="purpleSpotStyle">
        <item name="android:background">@drawable/purple_blur_spot</item>
        <item name="android:layout_width">94dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">220dp</item>
    </style>

    <style name="blueSpotStyle">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">136dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/blue_blur_spot</item>
    </style>

    <style name="toolbarTextStyle">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pinCodeNumber">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:background">@drawable/pin_enter_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/pin_enter_text_color</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="recoveryHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recoveryMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grayTextButtonColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00b2ff</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="arrowBackStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>

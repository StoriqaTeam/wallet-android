<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>

        <item name="alertDialogTheme">@style/TransparentDialogTheme</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorHint">@color/input_hint</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/button_navigate_up</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/checkbox_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GradientButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gradient_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/button_space</item>
        <item name="android:layout_marginEnd">@dimen/button_space</item>
    </style>

    <style name="BorderlessButton">
        <item name="android:textColor">@color/button_borderless_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BorderlessButton.Small">
        <item name="android:textColor">@color/button_borderless_small_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PinCodeButton">
        <item name="android:background">@drawable/button_pin_background</item>
        <item name="android:textColor">@color/button_pin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegularText">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Password">
        <item name="passwordToggleDrawable">@drawable/eye_background</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--//////////////////////////////////////////////////////////////////////////////////////-->

    <style name="SolidButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00b2ff</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BorderlessButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00b2ff</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginRight">27dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="editText">
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <style name="grayTextButton">
        <item name="android:textColor">@color/grayTextButtonColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pinCircleStyle">
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:background">@drawable/white_circle_blue_corners_background</item>
        <item name="android:layout_width">11dp</item>
        <item name="android:layout_height">11dp</item>
    </style>

    <style name="registerTextInputStyle">
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="signButton" parent="buttonStyle">
        <item name="android:background">@drawable/switch_state_button</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/disableButton</item>
    </style>

    <style name="watchPasswordButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="registerDialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="registerDialogMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="toolbarTextStyle">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pinCodeNumber">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:background">@drawable/pin_enter_button</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="recoveryHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recoveryMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grayTextButtonColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00b2ff</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="arrowBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:src">@drawable/back</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="sendHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="send_header_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@drawable/send_header</item>
    </style>

    <style name="sendAmountStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="buttonEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:src">@drawable/pencil_redact</item>
    </style>

    <style name="currencySign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
    </style>

    <style name="sendInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="sliderItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bluegrey</item>
    </style>

    <style name="purpleSpotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/purple_blur_spot</item>
    </style>

    <style name="blueSpotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blue_blur_spot</item>
    </style>

    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="sendTitleStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">@color/bluegrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="blackMediumText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="myWalletButtonContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transaction_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="headerRegisterLoginText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>

        <item name="alertDialogTheme">@style/TransparentDialogTheme</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorHint">@color/input_hint</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/button_navigate_up</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/checkbox_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Design.Error.Password">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Design.Hint.Password">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="GradientButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gradient_background</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/button_space</item>
        <item name="android:layout_marginEnd">@dimen/button_space</item>
    </style>

    <style name="BorderlessButton">
        <item name="android:textColor">@color/button_borderless_text</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BorderlessButton.Small">
        <item name="android:textColor">@color/button_small_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PinCodeButton">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:background">@drawable/button_pin_background</item>
        <item name="android:textColor">@color/button_pin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegularText">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HighlightedText">
        <item name="android:textColor">@color/text_highlighted</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Password">
        <item name="passwordToggleDrawable">@drawable/eye_background</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorAccent</item>
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint.Password</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error.Password</item>
    </style>

</resources>
